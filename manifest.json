{
  "name": "Bookmark Roulette",
  "short_name": "BkmkRoul",
  "version": "1.0",
  "description": "Opens a random site from your bookmarks list",
  "manifest_version": 2,
  "icons": {
    "16": "Res/Icons/icon16.png",
    "32": "Res/Icons/icon32.png",
    "48": "Res/Icons/icon48.png",
    "128": "Res/Icons/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["storage", "bookmarks", "notifications", "tabs"],
  "options_page": "options.html",
  "browser_action": {
    "default_icon": {
      "16": "Res/Icons/icon16.png",
      "32": "Res/Icons/icon32.png",
      "48": "Res/Icons/icon48.png",
      "128": "Res/Icons/icon128.png"
    }
  }
}
