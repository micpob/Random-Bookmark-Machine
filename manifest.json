{
  "name": "Bookmark roulette",
  "short_name": "Bkmkroul",
  "version": "1.0",
  "description": "Visit a random site in your bookmarks",
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["storage", "bookmarks"],
  "browser_action": {
    "default_icon": {
      "16": "Res/Icons/icon16.png",
      "32": "Res/Icons/icon32.png",
      "48": "Res/Icons/icon48.png",
      "128": "Res/Icons/icon128.png"
    },
    "icons": {
      "32": "Res/Icons/icon32.png",
      "16": "Res/Icons/icon16.png",
      "48": "Res/Icons/icon48.png",
      "128": "Res/Icons/icon128.png"
    }
  }
}
